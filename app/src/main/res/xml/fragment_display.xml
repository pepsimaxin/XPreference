<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="ListPreference">
        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="ListPreference"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="自动锁屏"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="SwitchPreference">
        <SwitchPreference
            app:key="sync"
            app:title="拨号键盘提示音"
            app:summary="副标题测试区域" />

        <SwitchPreference
            app:key="sync"
            app:title="锁定屏幕提示音"
            app:summary="副标题测试区域" />

        <SwitchPreference
            app:key="sync"
            app:title="充电提示音和振动"
            app:summary="副标题测试区域" />
    </PreferenceCategory>
</PreferenceScreen>